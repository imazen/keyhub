@model KeyHub.Web.ViewModels.Feature.FeatureCreateViewModel

@{
    ViewBag.Title = "Create New Feature";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>FeatureViewModel</legend>

        @Html.HiddenFor(model => model.Feature.FeatureId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Feature.FeatureCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Feature.FeatureCode)
            @Html.ValidationMessageFor(model => model.Feature.FeatureCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Feature.VendorId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Feature.VendorId, Model.VendorList)
            @Html.ValidationMessageFor(model => model.Feature.VendorId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
