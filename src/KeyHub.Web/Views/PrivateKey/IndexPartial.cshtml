@model KeyHub.Web.ViewModels.PrivateKey.PrivateKeyIndexViewModel

<h2>Private Keys</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { parentVendor = Model.ParentVendorGUID }, new { @class="Btn New"})
</p>
<table  border="0" border="0" cellspacing="0" cellpadding="0" class="GridTable">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrivateKeys.FirstOrDefault().DisplayName)
        </th>
    </tr>
        </thead>
@foreach (var item in Model.PrivateKeys) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { key=item.PrivateKeyId })
        </td>
    </tr>
}

</table>
