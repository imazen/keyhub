@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>

    <div class="display-label">
        @Html.DisplayNameFor(m => m.ControllerName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(m => m.ControllerName)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(m => m.ActionName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(m => m.ActionName)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(m => m.Exception.Message)
    </div>
    <div class="display-field">
        @Html.DisplayFor(m => m.Exception.Message)
    </div>

    @if (Model.Exception.InnerException != null)
    {
        <div class="display-label">
            @Html.DisplayNameFor(m => m.Exception.InnerException)
        </div>
        <div class="display-field">
            @Html.DisplayFor(m => m.Exception.InnerException.Message)
        </div>
    }
</hgroup>

