  <connectionStrings>
    <add name="DataContext" providerName="System.Data.SqlClient" connectionString="Data Source=(LocalDb)\v11.0;Initial Catalog=KeyHub;Integrated Security=true;AttachDBFilename=|DataDirectory|\KeyHub.mdf" />
