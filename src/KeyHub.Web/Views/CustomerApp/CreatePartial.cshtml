@model KeyHub.Web.ViewModels.CustomerApp.CustomerAppCreateViewModel

@using (Html.BeginForm("CreatePartial", "CustomerApp"))
{
    @Html.ValidationSummary()

    <p>
        Note: No applications are registerd for theses licenses yet. <br/>
        To use the licenses please register the application.
    </p>
    
    <fieldset>
        <legend>CustomerAppViewModel</legend>

        @Html.HiddenFor(model => model.CustomerApp.CustomerAppId)
        @Html.HiddenFor(model => model.RedirectUrl)

        <div class="editor-label">
            @Html.LabelFor(model => model.CustomerApp.ApplicationName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CustomerApp.ApplicationName)
            @Html.ValidationMessageFor(model => model.CustomerApp.ApplicationName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CustomerApp.SelectedLicenseGUIDs)
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.CustomerApp.SelectedLicenseGUIDs, Model.LicenseList)
            @Html.ValidationMessageFor(model => model.CustomerApp.SelectedLicenseGUIDs)
        </div>

        <p>
            <input type="submit" value="Register application" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
