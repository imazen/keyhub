@using MvcFlash.Core.Extensions
@model KeyHub.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Link OpenID Accounts";
}

@section featured {
    <h2>@ViewBag.Title.</h2>
}

<table cellpadding="30px">
    <tr>
        <td valign="top">
            <h2>Associate OpenID accounts with your login.</h2>

            @using (Html.BeginForm("LinkAccount", "Account"))
            {
                @Html.AntiForgeryToken()

                <fieldset> 
                    <legend>Associate OpenID accounts with your login.</legend>
                    <div class="editor-field" style="width: 270px;">
                    @foreach (AuthenticationClientData p in OAuthWebSecurity.RegisteredClientData.OrderBy(x => x.DisplayName))
                    {
                        <input type="submit" name="provider" value="@p.DisplayName" title="Link your @p.DisplayName account" />
                        <span>&nbsp;</span>
                    }
                    </div>
                </fieldset>
            }
        </td>
    </tr>
</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
