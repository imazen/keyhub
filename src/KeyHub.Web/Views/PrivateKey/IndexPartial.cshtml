@model KeyHub.Web.ViewModels.PrivateKey.PrivateKeyIndexViewModel


<h2>Private Key <span>Overview</span></h2>
<p>
    @Html.ActionLink("Create New Private Key ", "Create", new { parentVendor = Model.ParentVendorGUID }, new { @class="Btn New"})
</p>
<table border="0" border="0" cellspacing="0" cellpadding="0" class="GridTable" style="width:auto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrivateKeys.FirstOrDefault().DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivateKeys.FirstOrDefault().PublicKeyXmlString)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model.PrivateKeys) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.TextBoxFor(modelItem => item.PublicKeyXmlString, new { @readonly = "readonly"})
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { key=item.PrivateKeyId })
            |
            @Html.ActionLink("Remove", "Remove", new { key=item.PrivateKeyId })
        </td>
    </tr>
}

</table>
