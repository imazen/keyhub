@using MvcFlash.Core.Extensions
@model KeyHub.Web.ViewModels.Vendor.VendorDetailsViewModel

@{
    ViewBag.ItemName = "Vendor";
    ViewBag.Title = "Details";
}

<h2>@ViewBag.ItemName <span>@ViewBag.Title</span></h2>

<h3>
    @Html.Flash()
</h3>

<fieldset>
    <legend>VendorDetailsViewItem</legend>

    @Html.HiddenFor(model => model.Vendor.ObjectId)
    <div class="editor-container-sideBySide">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.ObjectId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.ObjectId)
    </div>    
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.Street)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.Street)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.PostalCode)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.PostalCode)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.City)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.City)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.Region)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.Region)
    </div>
  
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Vendor.CountryName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Vendor.CountryName)
    </div>
        </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { key = Model.Vendor.ObjectId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<p>
    @Html.Action("IndexPartial", "PrivateKey", new { parentVendor = Model.Vendor.ObjectId })
</p>

<p>

    <h2>VendorCredential</h2>
    <p>
        @Html.ActionLink("Create New VendorCredential", "Create", "VendorCredential", new { parentVendor = Model.Vendor.ObjectId }, new { @class="Btn New"})
    </p>
    <table border="0" border="0" cellspacing="0" cellpadding="0" class="GridTable" style="width:auto">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vendor.VenderCredentials.FirstOrDefault().CredentialName)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model.Vendor.VenderCredentials) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CredentialName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "VendorCredential", new { key=item.VendorCredentialId }, new {})
                    |
                    @Html.ActionLink("Remove", "Remove", "VendorCredential", new { key=item.VendorCredentialId }, new {})
                </td>
            </tr>
        }

</table></p>