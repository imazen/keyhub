@model KeyHub.Web.ViewModels.Feature.FeatureCreateEditViewModel

@{
    ViewBag.ItemName = "Feature";
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title <span>@ViewBag.ItemName</span></h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>FeatureViewModel</legend>

        @Html.HiddenFor(model => model.Feature.FeatureId)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Feature.FeatureName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Feature.FeatureName)
            @Html.ValidationMessageFor(model => model.Feature.FeatureName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Feature.FeatureCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Feature.FeatureCode)
            @Html.ValidationMessageFor(model => model.Feature.FeatureCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Feature.VendorId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Feature.VendorId, Model.VendorList)
            @Html.ValidationMessageFor(model => model.Feature.VendorId)
        </div>

        <p>
            <input type="submit" value="Save @ViewBag.ItemName" />
        </p>
    </fieldset>
}


    @Html.ActionLink("Back to List", "Index")


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
